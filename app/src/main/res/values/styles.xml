<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorSecondaryLight</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LargerText" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallerText" parent="TextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Transaction_Item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingEnd">12sp</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HomeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>

    </style>

    <style name="HomeLinearLayoutItems">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:background">@color/colorSecondary</item>
    </style>

</resources>
